                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">上传回单</label>
                                            <div class="col-md-9">
                                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                                    <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="height: 300px; width: 300px;"></div>
                                                    <div>
                                                        <span class="btn btn-default btn-file"><span class="fileinput-new">选择图片</span><span class="fileinput-exists">更改</span><input type="file" name="receiptFile"></span>
                                                        <a href="#" class="btn btn-default fileinput-exists" data-dismiss="fileinput">移除</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <!--/span-->
                                </div>
                                <!--/row-->
                            </div>
                            <div class="form-actions">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row">
                                            <div class="col-md-offset-3 col-md-9">
                                                <button type="submit" class="btn green"><i class="fa fa-save"></i> 保存</button>
                                                <a href="@Url.Action("Index")" class="btn default"><i class="fa fa-undo"></i> 返回列表</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- END FORM-->
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT -->
@section scripts{
    <script>
        $(function () {

            $('#Cost,#Payment').on('change', function () {
                if (!$('#Cost').val())
                    return;
                    var cost = Number($('#Cost').val());
                    var payment = Number($('#Payment').val());
                    $('#Debt').val(cost - payment > 0 ? cost - payment : 0);
            });
            $('#USCost,#USPayment').on('change', function () {
                if (!$('#USCost').val())
                    return;
                    var cost = Number($('#USCost').val());
                    var payment = Number($('#USPayment').val());
                    $('#USDebt').val(cost - payment > 0 ? cost - payment : 0);
            });

            var companyUrl = '@Url.Action("GetCompanyName", "BusinessCompany")';

            var bestPictures = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('Name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                //prefetch: allcompanyUrl,
                remote: {
                    url: companyUrl + '?query=%QUERY',
                    wildcard: '%QUERY'
                }
            });

            $('#CompanyName').typeahead(null, {
                name: 'best-pictures',
                display: 'Name',
                source: bestPictures
            });
        });
    </script>
}
