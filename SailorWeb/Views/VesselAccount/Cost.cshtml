                        </div>
                        <div class="caption">
                            <span class="caption-subject bold note note-warning">船舶名称：@Request.QueryString["VesselName"]</span>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <!-- BEGIN FORM-->
