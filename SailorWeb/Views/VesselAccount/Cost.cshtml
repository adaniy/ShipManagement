                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.USPayment, new { @class = "control-label col-md-5" })
                                            <div class="col-md-7">
                                                <div class="input-group">
                                                    <span class="input-group-addon">
                                                        $
                                                    </span>
                                                    @Html.EditorFor(model => model.USPayment, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
