@model SailorWeb.ViewModels.LoginViewModel
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_LayoutNoHeader.cshtml";
}
<link href="~/assets/pages/css/login-soft.css" rel="stylesheet" />
<!-- BEGIN LOGO -->
<div class="logo">
    <a href="@Url.Action("Index","Home")">
        <img src="~/assets/layout3/img/logo-crew-default.png" />
    </a>
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<div class="content">
    <!-- BEGIN LOGIN FORM -->
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login-form" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="form-title">登录您的账号</h4>
        @Html.ValidationSummary(true)
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">@Html.DisplayNameFor(model => model.Email)</label>
            <div class="input-icon">
                <i class="fa fa-user"></i>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "邮箱" })
            </div>
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">@Html.DisplayNameFor(model => model.Password)</label>
            <div class="input-icon">
                <i class="fa fa-lock"></i>
                @Html.PasswordFor(model => model.Password, new { @class = "form-control placeholder-no-fix", autocomplete = "off", placeholder = "密码" })
            </div>
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-actions">
            <label class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe) @Html.LabelFor(m=>m.RememberMe)
            </label>
            <button type="submit" class="btn blue pull-right">
                登录 <i class="m-icon-swapright m-icon-white"></i>
            </button>
        </div>
        <div class="login-options">
            <br /><br /><br /><br /><br />
        </div>
    }
    <!-- END LOGIN FORM -->
</div>

<!-- END LOGIN -->
<!-- BEGIN COPYRIGHT -->
<div class="copyright">
    @DateTime.Now.Year &copy;  帆海船员管理系统.
</div>
<!-- END COPYRIGHT -->
@section scripts{
    <script>
        $(function () {
            $('body').addClass('login');
            // init background slide images
            $.backstretch([
             "../assets/pages/media/bg/1.jpg",
             "../assets/pages/media/bg/2.jpg",
             "../assets/pages/media/bg/3.jpg",
             "../assets/pages/media/bg/4.jpg"
            ], {
                fade: 1000,
                duration: 8000
            }
         );
        })
    </script>

}

