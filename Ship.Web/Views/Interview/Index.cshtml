@model IPagedList<Interview>

@{
    ViewBag.Title = "面试列表";
}

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
    <div class="container">
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                @Html.ActionLink("首页", "Index", "Home")
                <i class="fa fa-circle"></i>
            </li>
            <li>
                @Html.ActionLink("面试管理", "Index")
                <i class="fa fa-circle"></i>
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN SAMPLE TABLE PORTLET-->
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-list font-green-sharp"></i>
                            <span class="caption-subject font-green-sharp bold uppercase">@ViewBag.Title</span>
                        </div>
                        <div class="actions btn-set">
                            <a href="@Url.Action("Create")" class="btn btn-circle green-haze btn-sm">
                                <i class="fa fa-plus"></i> 添加
                            </a>
                            <a href="javascript:void(0)" class="btn btn-circle green btn-sm btn-search">
                                <i class="fa fa-search"></i> 搜索
                            </a>
                        </div>
                    </div>
                    <div class="portlet-body form portlet-search">
                        <!-- BEGIN FORM-->
                        @using (Html.BeginForm("Index", "Interview", FormMethod.Get, new { @class = "form-horizontal" }))
                        {
                            <button type="submit" class="display-hide"></button>
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">姓名</label>
                                            <div class="col-md-8">
                                                @Html.TextBox("SailorName", ViewBag.SailorName as string, new { @class = "form-control", placeholder = "请输入船员姓名" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">职务</label>
                                            <div class="col-md-8">
                                                @Html.DropDownList("Post", null, "", new { @class = "form-control select2me" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">面试日期</label>
                                            <div class="col-md-9">
                                                <div class="input-group input-large date-picker input-daterange">
                                                    @Html.TextBox("BeginDate", ViewBag.BeginDate as string, "{0:yyyy-MM-dd}", new { @class = "form-control"})
                                                    <span class="input-group-addon">
                                                        --
                                                    </span>
                                                    @Html.TextBox("EndDate", ViewBag.EndDate as string, "{0:yyyy-MM-dd}", new { @class = "form-control"})
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                            </div>
                        }
                        <!-- END FORM-->
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable table-scrollable-borderless">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            船员姓名
                                        </th>
                                        <th>
                                            面试职务
                                        </th>
                                        <th>
                                            面试成绩
                                        </th>
                                        <th>
                                            面试结论
                                        </th>
                                        <th>
                                            面试评语
                                        </th>
                                        <th>
                                            面试人
                                        </th>
                                        <th>
                                            面试日期
                                        </th>
                                        <th>
                                            综合评定
                                        </th>
                                        <th>
                                            船员要求
                                        </th>
                                        <th>
                                            操作
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.ActionLink(item.SailorName, "Details", "Sailor", new { id = item.SailorID }, null)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Post)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InterviewScore)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Conclusion)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Comment)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Interviewer)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InterviewDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ComprehensiveAssessment)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.SailorRequirement)
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Details", new { id = item.InterviewID })" class="btn default btn-xs green-jungle">
                                                    <i class="fa fa-th"></i> 详情
                                                </a>
                                                <a href="@Url.Action("Edit", new { id=item.InterviewID})" class="btn default btn-xs blue">
                                                    <i class="fa fa-edit"></i> 编辑
                                                </a>
                                                @if (User.IsInRole("CompanyAdmin"))
                                                {
                                                    <a href="javascript:Metronic.deleteItem('@Url.Action("Delete", new { id = item.InterviewID })')" class="btn default btn-xs red">
                                                        <i class="fa fa-trash"></i> 删除
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        第 @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 页，共 @Model.PageCount 页

                        @Html.PagedListPager(Model, page => Url.Action("Index",
                        new { page, 
                            BeginDate = ViewBag.BeginDate, 
                            EndDate = ViewBag.EndDate, 
                            SailorName = ViewBag.SailorName,
                            Post = ViewBag.SelectedPost
                        }))
                    </div>
                </div>
                <!-- END SAMPLE TABLE PORTLET-->
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT -->
