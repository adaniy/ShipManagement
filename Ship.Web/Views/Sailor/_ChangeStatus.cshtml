
<div class="modal fade" id="statusModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 id="myLargeModalLabel" class="modal-title">更改船员状态</h4>
            </div>
            <div class="portlet light">
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    <form asp-controller="Sailor" asp-action="ChangeStatus" ajax-success="changeSuccess" class="form-horizontal" role="form">
                        <div class="form-body">
                            <div asp-validation-summary="ModelOnly"></div>
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    船员姓名
                                </label>
                                <div class="col-md-9">
                                    <p class="form-control-static">
                                        <span></span>
                                        @Html.Hidden("SailorID")
                                    </p>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-md-3" for="SailorStatus">
                                    更改状态为
                                </label>
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <div class="icheck-inline">
                                            <label>
                                                <input type="radio" data-radio="iradio_minimal-blue" name="SailorStatus" value="0" class="icheck" /> 休假
                                            </label>
                                            <label>
                                                <input type="radio" data-radio="iradio_minimal-blue" name="SailorStatus" value="2" class="icheck" /> 待派
                                            </label>
                                            <label>
                                                <input type="radio" data-radio="iradio_minimal-blue" name="SailorStatus" value="3" class="icheck" /> 培训
                                            </label>
                                            <label>
                                                <input type="radio" data-radio="iradio_minimal-blue" name="SailorStatus" value="4" class="icheck" /> 不跟踪
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn green"><i class="fa fa-save"></i> 保存</button>
                                            <a class="btn default" href="javascript:void(0)" data-dismiss="modal"><i class="fa fa-undo"></i> 返回列表</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                </div>
                            </div>
                        </div>
                    </form>
                    <!-- END FORM-->
                </div>
            </div>
        </div>
    </div>
</div>

