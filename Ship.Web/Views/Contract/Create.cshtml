@section scripts{
    <script>
        function generateAshoreNoticeDate() {
            var aboardDate = $('#AboardDate').val();
            if (!aboardDate)
                return;
            var ashoreDate = new Date(aboardDate.replace('/-/g', '/'));
            var term = Number($('#Term').val());

            ashoreDate.setMonth(ashoreDate.getMonth() + term);
            $('#AshoreDate').val(ashoreDate.format('yyyy-MM-dd'));

            var noticeDate = new Date();
            noticeDate = ashoreDate;
            noticeDate.setMonth(ashoreDate.getMonth() - 1);
            $('#NoticeDate').parent().datepicker('setDate', noticeDate);
        }

        $(function () {
            $('#ShipWage,#HomeWage,#VacationWage').change(function () {
                $('#Wage').val(Number($('#ShipWage').val()) + Number($('#HomeWage').val()) + Number($('#VacationWage').val()));
            });

            $('#AboardDate').parent().datepicker({
                rtl: Metronic.isRTL(),
                format: "yyyy-mm-dd",
                language: "zh-CN",
                todayHighlight: true,
                autoclose: true
            }).on("changeDate", generateAshoreNoticeDate);

            $('#Term').on('change', generateAshoreNoticeDate);

            var vesselListUrl = '@Url.Action("GetVessels", "Vessel")';
            var vesselUrl = '@Url.Action("GetVessel", "Vessel")';
            var sailorUrl = '@Url.Action("GetSailor", "Sailor")';
            Metronic.handleVesselShipowner(vesselListUrl, vesselUrl);

            $('#SailorID').on('change', function (e) {
                var data = { "id": e.val };
                $.getJSON(sailorUrl, data, function (sailor) {
                    $('#Post').select2("val", sailor.Post);
                });
            });

            var SailorID = '@ViewBag.SailorID';
            var VesselID = '@ViewBag.VesselID';
            if (SailorID) {
                $('#SailorID').select2("readonly", true);
                var data = { "id": SailorID };
                $.getJSON(sailorUrl, data, function (sailor) {
                    $('#Post').select2("val", sailor.Post);
                });
            }
            if (VesselID) {
                $('#VesselID').select2("readonly", true);
                $('#ShipownerID').select2("readonly", true);
            }
        });

    </script>
    }

