@model IPagedList<Certificate>

@{
    ViewBag.Title = "证书列表";
}

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
    <div class="container">
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a asp-controller="Home" asp-action="Index">首页</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <a asp-action="Index">证书管理</a>
                <i class="fa fa-circle"></i>
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN SAMPLE TABLE PORTLET-->
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-list font-green-sharp"></i>
                            <span class="caption-subject font-green-sharp bold uppercase">@ViewBag.Title</span>
                        </div>
                        <div class="actions btn-set">
                            <a asp-action="Create" class="btn btn-circle green-haze btn-sm">
                                <i class="fa fa-plus"></i> 添加
                            </a>
                            <a href="javascript:void(0)" class="btn btn-circle green btn-sm btn-search">
                                <i class="fa fa-search"></i> 搜索
                            </a>
                        </div>
                    </div>
                    <div class="portlet-body form portlet-search">
                        <!-- BEGIN FORM-->
                        <form asp-controller="Certificate" asp-action="Index" method="get" class="form-horizontal">
                            <input type="hidden" value="@ViewBag.status" />
                            <button type="submit" class="display-hide"></button>
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">证书名称</label>
                                            <div class="col-md-9">
                                                <input name="Name" value="@ViewBag.Name" class="form-control" placeholder = "请输入证书名称" />
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">船员姓名</label>
                                            <div class="col-md-9">
                                                <input name="SailorName" value="@ViewBag.SailorName" class="form-control" placeholder="请输入船员姓名" />
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">证书编号</label>
                                            <div class="col-md-9">
                                                <input name="Code" value="@ViewBag.Code" class="form-control" placeholder="请输入证书编号" />
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label col-md-2">签发日期</label>
                                            <div class="col-md-10">
                                                <div class="input-group input-large date-picker input-daterange">
                                                    <input name="IssueBeginDate" value="@ViewBag.IssueBeginDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                                                    <span class="input-group-addon">
                                                        --
                                                    </span>
                                                    <input name="IssueEndDate" value="@ViewBag.IssueEndDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label col-md-2">失效日期</label>
                                            <div class="col-md-10">
                                                <div class="input-group input-large date-picker input-daterange">
                                                    <input name="ExpiryBeginDate" value="@ViewBag.ExpiryBeginDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                                                    <span class="input-group-addon">
                                                        --
                                                    </span>
                                                    <input name="ExpiryEndDate" value="@ViewBag.ExpiryEndDate" asp-format="{0:yyyy-MM-dd}" class="form-control" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                            </div>
                        </form>
                        @using (Html.BeginForm("Index", "", FormMethod.Get, new { @class = "form-horizontal" }))
                        {
                            @Html.Hidden("status")
                            <button type="submit" class="display-hide"></button>
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">证书名称</label>
                                            <div class="col-md-9">
                                                @Html.TextBox("Name", ViewBag.Name as string, new { @class = "form-control", placeholder = "请输入证书名称" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">船员姓名</label>
                                            <div class="col-md-9">
                                                @Html.TextBox("SailorName", ViewBag.SailorName as string, new { @class = "form-control", placeholder = "请输入船员姓名" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">证书编号</label>
                                            <div class="col-md-9">
                                                @Html.TextBox("Code", ViewBag.Code as string, new { @class = "form-control", placeholder = "请输入证书编号" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label col-md-2">签发日期</label>
                                            <div class="col-md-10">
                                                <div class="input-group input-large date-picker input-daterange">
                                                    @Html.TextBox("IssueBeginDate", ViewBag.IssueBeginDate as string, "{0:yyyy-MM-dd}", new { @class = "form-control" })
                                                    <span class="input-group-addon">
                                                        --
                                                    </span>
                                                    @Html.TextBox("IssueEndDate", ViewBag.IssueEndDate as string, "{0:yyyy-MM-dd}", new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label col-md-2">失效日期</label>
                                            <div class="col-md-10">
                                                <div class="input-group input-large date-picker input-daterange">
                                                    @Html.TextBox("ExpiryBeginDate", ViewBag.ExpiryBeginDate as string, "{0:yyyy-MM-dd}", new { @class = "form-control" })
                                                    <span class="input-group-addon">
                                                        --
                                                    </span>
                                                    @Html.TextBox("ExpiryEndDate", ViewBag.ExpiryEndDate as string, "{0:yyyy-MM-dd}", new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                            </div>
                        }
                        <!-- END FORM-->
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable table-scrollable-borderless">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model[0].Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model[0].SailorID)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model[0].Code)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model[0].IssueDate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model[0].ExpiryDate)
                                        </th>
                                        <th>
                                            证书预览
                                        </th>
                                        <th>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        string statusRow = "";
                                        if (item.ExpiryDate < DateTime.Now)
                                        {
                                            statusRow = "danger";
                                        }
                                        else if (item.NoticeDate < DateTime.Now)
                                        {
                                            statusRow = "warning";
                                        }
                                        else
                                        {
                                            statusRow = "success";
                                        }
                                        <tr class="@statusRow">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                <a asp-controller="Sailor" asp-action="Details" asp-route-id="@item.SailorID">item.SailorName</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Code)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IssueDate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ExpiryDate)
                                            </td>
                                            <td>
                                                @if (item.FileID.HasValue)
                                                {
                                                    <a href="javascript:Metronic.showPicture('@item.FileID','证书预览')" class="btn default btn-xs green">
                                                        <i class="icon-eye"></i> 预览
                                                    </a>
                                                }
                                            </td>
                                            <td>
                                                <a asp-action="Details" asp-route-id="@item.CertificateID" class="btn default btn-xs green-jungle">
                                                    <i class="fa fa-th"></i> 详情
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.CertificateID"  class="btn default btn-xs blue">
                                                    <i class="fa fa-edit"></i> 编辑
                                                </a>
                                                @if (User.IsInRole("CompanyAdmin"))
                                                {
                                                    <a href="javascript:Metronic.deleteItem('@Url.Action("Delete", new { id = item.CertificateID })')" class="btn default btn-xs red">
                                                        <i class="fa fa-trash"></i> 删除
                                                    </a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        第 @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) 页，共 @Model.PageCount 页

                        @Html.PagedListPager(Model, page => Url.Action("Index",
                        new
                        {
                            page,
                            ExpiryBeginDate = ViewBag.ExpiryBeginDate,
                            ExpiryEndDate = ViewBag.ExpiryEndDate,
                            IssueBeginDate = ViewBag.IssueBeginDate,
                            IssueEndDate = ViewBag.IssueEndDate,
                            SailorName = ViewBag.SailorName,
                            Name = ViewBag.Name,
                            Code = ViewBag.Code,
                            status = ViewBag.status
                        }))
                    </div>
                </div>
                <!-- END SAMPLE TABLE PORTLET-->
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT -->
