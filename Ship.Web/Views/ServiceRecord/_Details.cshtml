@model ServiceRecord

<div class="row">
    <div class="col-md-12">
        <div class="portlet light">
            <div class="portlet-body form">
                <form class="form-horizontal" role="form">
                    <div class="form-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.SailorName, new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                <p class="form-control-static">
                                    @Html.ActionLink(Model.SailorName, "Details", "Sailor", new { id = Model.SailorID }, null)
                                </p>
                            </div>
                            @Html.LabelFor(model => model.Post, new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                <p class="form-control-static">
                                    @Html.DisplayFor(model => model.Post)
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Shipowner.Name, new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                <p class="form-control-static">
                                    @Html.ActionLink(Model.ShipownerName, "Details", "Shipowner", new { id = Model.ShipownerID }, null)
                                </p>
                            </div>
                            @Html.LabelFor(model => model.Vessel.Name, new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                <p class="form-control-static">
                                    @Html.ActionLink(Model.VesselName, "Details", "Vessel", new { id = Model.VesselID }, null)
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.AboardDate, new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                <p class="form-control-static">
                                    @Html.DisplayFor(model => model.AboardDate)
                                </p>
                            </div>
                            @Html.LabelFor(model => model.AboardPlace, new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                <p class="form-control-static">
                                    @Html.DisplayFor(model => model.AboardPlace)
                                </p>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.SailZone, new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                <p class="form-control-static">
                                    @Html.DisplayFor(model => model.SailZone)
                                </p>
                            </div>
                            @Html.LabelFor(model => model.Remark, new { @class = "control-label col-md-3" })
                            <div class="col-md-3">
                                <p class="form-control-static">
                                    @Html.DisplayFor(model => model.Remark)
                                </p>
                            </div>
                        </div>

                    </div>
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-md-offset-3 col-md-9">
                                        <a href="javascript:Metronic.showDialog('@Url.Action("Ashore", new { id = Model.ServiceRecordID })','船员下船操作')" class="btn green">
                                            <i class="fa fa-ship"></i> 下船
                                        </a>
                                        <a class="btn default" href="javascript:void(0)" data-dismiss="modal"><i class="fa fa-undo"></i> 返回</a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
