@model NoticeHandle

<div class="modal fade" id="handleModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 id="myLargeModalLabel" class="modal-title">消息提醒处理</h4>
            </div>
            <div class="portlet light">
                <div class="portlet-body form">
                    <!-- BEGIN FORM-->
                    @using (Html.BeginForm("NoticeHandle", "Notice", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        <div class="form-body">
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                @Html.LabelFor(model => model.HandleType, new { @class = "control-label col-md-3" })
                                <div class="col-md-9">
                                    @Html.EditorFor(model=>model.HandleType,"Enum-radio")
                                    @Html.HiddenFor(model=>model.NoticeID)
                                </div>
                            </div>
                            <div class="form-group" id="daysRow" style="display:none">
                                @Html.LabelFor(model => model.DelayDays, new { @class="control-label col-md-3"})
                                <div class="col-md-9">
                                    @Html.EditorFor(model => model.DelayDays, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.DelayDays)
                                </div>
                            </div>
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="submit" class="btn green"><i class="fa fa-save"></i> 保存</button>
                                            <a class="btn default" href="javascript:void(0)" data-dismiss="modal"><i class="fa fa-undo"></i> 返回列表</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                </div>
                            </div>
                        </div>
                    }
                    <!-- END FORM-->
                </div>
            </div>
        </div>
    </div>
</div>

