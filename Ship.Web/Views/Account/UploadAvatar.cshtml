@{
    ViewBag.Title = "上传头像";
}
<link href="~/assets/pages/css/profile.css" rel="stylesheet" />
<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
    <div class="container">
        <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a asp-action="Index" asp-controller="Home">首页</a><i class="fa fa-circle"></i>
            </li>
            <li>
                <a asp-action="UserCenter">个人中心</a>
                <i class="fa fa-circle"></i>
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="row margin-top-10">
            <div class="col-md-12">
                <!-- BEGIN PROFILE SIDEBAR -->
                <div class="profile-sidebar" style="width: 250px;">
                    <!-- PORTLET MAIN -->
                    <div class="portlet light profile-sidebar-portlet">
                        <!-- SIDEBAR USERPIC -->
                        <div class="profile-userpic">
                            <img src="@Url.Action("GetAvatar", new { size = "medium" })" class="img-responsive" alt="">
                        </div>
                        <!-- END SIDEBAR USERPIC -->
                        <!-- SIDEBAR USER TITLE -->
                        <div class="profile-usertitle">
                            <div class="profile-usertitle-name">
                                @User.Identity.Name
                            </div>
                            <div class="profile-usertitle-job">
                                @ViewBag.CompanyName
                            </div>
                        </div>
                        <!-- END SIDEBAR USER TITLE -->
                        <!-- SIDEBAR MENU -->
                        <div class="profile-usermenu">
                            <ul class="nav">
                                <li>
                                    <a asp-action="UserCenter">
                                        <i class="icon-home"></i>
                                        个人中心
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="AccountSetting">
                                        <i class="icon-settings"></i>
                                        账号设置
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="ChangePassword">
                                        <i class="icon-lock"></i>
                                        修改密码
                                    </a>
                                </li>
                                <li class="active">
                                    <a asp-action="UploadAvatar">
                                        <i class="icon-picture"></i>
                                        上传头像
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- END MENU -->
                    </div>
                    <!-- END PORTLET MAIN -->
                </div>
                <!-- END BEGIN PROFILE SIDEBAR -->
                <!-- BEGIN PROFILE CONTENT -->
                <div class="profile-content">
                    <div class="portlet light">
                        <div class="portlet-title tabbable-line">
                            <div class="caption caption-md">
                                <i class="icon-globe theme-font hide"></i>
                                <span class="caption-subject font-blue-madison bold uppercase">@ViewBag.Title</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <form asp-controller="Account" asp-action="UploadAvatar" method="post" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <div class="fileinput fileinput-new" data-provides="fileinput">
                                        <div class="fileinput-new thumbnail" style="width: 200px; height: 200px;">
                                            <img src="@Url.Action("GetAvatar", new { size = "large" })" alt="" />
                                        </div>
                                        <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;">
                                        </div>
                                        <div>
                                            <span class="btn default btn-file">
                                                <span class="fileinput-new">
                                                    选择图像
                                                </span>
                                                <span class="fileinput-exists">
                                                    修改
                                                </span>
                                                <input type="file" name="avatarFile">
                                            </span>
                                            <a href="javascript:;" class="btn default fileinput-exists" data-dismiss="fileinput">
                                                移除
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="margin-top-10">
                                    <button type="submit" class="btn green-haze">
                                        保存
                                    </button>
                                    <a href="javascript:;" class="btn default">
                                        取消
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
                <!-- END PROFILE CONTENT -->
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT -->
