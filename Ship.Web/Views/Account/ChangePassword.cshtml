@model Ship.Web.ViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "修改密码";
}
<link href="~/assets/pages/css/profile.css" rel="stylesheet" />
<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
    <div class="container">
        <!-- END SAMPLE PORTLET CONFIGURATION MODAL FORM-->
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a asp-controller="Home" asp-action="Index">首页</a><i class="fa fa-circle"></i>
            </li>
            <li>
                <a asp-action="UserCenter">个人中心</a>
                <i class="fa fa-circle"></i>
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="row margin-top-10">
            <div class="col-md-12">
                <!-- BEGIN PROFILE SIDEBAR -->
                <div class="profile-sidebar" style="width: 250px;">
                    <!-- PORTLET MAIN -->
                    <div class="portlet light profile-sidebar-portlet">
                        <!-- SIDEBAR USERPIC -->
                        <div class="profile-userpic">
                            <img src="@Url.Action("GetAvatar", new { size = "medium" })" class="img-responsive" alt="">
                        </div>
                        <!-- END SIDEBAR USERPIC -->
                        <!-- SIDEBAR USER TITLE -->
                        <div class="profile-usertitle">
                            <div class="profile-usertitle-name">
                                @User.Identity.Name
                            </div>
                            <div class="profile-usertitle-job">
                                @ViewBag.CompanyName
                            </div>
                        </div>
                        <!-- END SIDEBAR USER TITLE -->
                        <!-- SIDEBAR MENU -->
                        <div class="profile-usermenu">
                            <ul class="nav">
                                <li>
                                    <a asp-action="UserCenter">
                                        <i class="icon-home"></i>
                                        个人中心
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="AccountSetting">
                                        <i class="icon-settings"></i>
                                        账号设置
                                    </a>
                                </li>
                                <li class="active">
                                    <a asp-action="ChangePassword">
                                        <i class="icon-lock"></i>
                                        修改密码
                                    </a>
                                </li>
                                <li>
                                    <a asp-action="UploadAvatar">
                                        <i class="icon-picture"></i>
                                        上传头像
                                    </a>
                                </li>
                            </ul>
                        </div>
                        <!-- END MENU -->
                    </div>
                    <!-- END PORTLET MAIN -->
                </div>
                <!-- END BEGIN PROFILE SIDEBAR -->
                <!-- BEGIN PROFILE CONTENT -->
                <div class="profile-content">
                    <div class="portlet light">
                        <div class="portlet-title tabbable-line">
                            <div class="caption caption-md">
                                <i class="icon-globe theme-font hide"></i>
                                <span class="caption-subject font-blue-madison bold uppercase">修改密码</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <form method="post" asp-controller="Account" asp-action="ChangePassword">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="OldPassword" class="control-label"></label>
                                    <input asp-for="OldPassword" type="password" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="NewPassword" class="control-label"></label>
                                    <input asp-for="NewPassword" type="password" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="ConfirmPassword" class="control-label"></label>
                                    <input asp-for="ConfirmPassword" type="password" class="form-control" />
                                </div>
                                <div class="margin-top-10">
                                    <button type="submit" class="btn green-haze">
                                        修改密码
                                    </button>
                                    <a href="javascript:;" class="btn default">
                                        取消
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>
                <!-- END PROFILE CONTENT -->
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>
<!-- END PAGE CONTENT -->
