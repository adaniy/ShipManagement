@model IEnumerable<Ship.Web.ViewModels.VesselCostBill>

@{
    ViewBag.Title = "船舶账单汇总";
}

<!-- BEGIN PAGE CONTENT -->
<div class="page-content">
    <div class="container">
        <!-- BEGIN PAGE BREADCRUMB -->
        <ul class="page-breadcrumb breadcrumb">
            <li>
                @Html.ActionLink("首页", "Index", "Home")
                <i class="fa fa-circle"></i>
            </li>
            <li>
                @Html.ActionLink("船舶费用", "CostList")
                <i class="fa fa-circle"></i>
            </li>
            <li class="active">
                @ViewBag.Title
            </li>
        </ul>
        <!-- END PAGE BREADCRUMB -->

        <div class="row">
            <div class="col-md-12">
                <!-- BEGIN SAMPLE TABLE PORTLET-->
                <div class="portlet light">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="fa fa-list font-green-sharp"></i>
                            <span class="caption-subject font-green-sharp bold uppercase">@ViewBag.Title</span>
                        </div>
                        <div class="actions btn-set">
                            <a href="javascript:void(0)" class="btn btn-circle green btn-sm btn-search">
                                <i class="fa fa-search"></i> 搜索
                            </a>
                        </div>
                    </div>
                    <div class="portlet-body form portlet-search">
                        <!-- BEGIN FORM-->
                        @using (Html.BeginForm("CostBill", "VesselAccount", FormMethod.Get, new { @class = "form-horizontal" }))
                        {
                            <button type="submit" class="display-hide"></button>
                            <div class="form-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">@Html.DisplayNameFor(model => model.VesselName)</label>
                                            <div class="col-md-8">
                                                @Html.DropDownList("VesselID", null, String.Empty, new { @class="form-control select2me"})
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label class="control-label col-md-4">@Html.DisplayNameFor(model => model.ShipownerName)</label>
                                            <div class="col-md-8">
                                                @Html.DropDownList("ShipownerID", null, String.Empty, new { @class = "form-control select2me" })
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-5">
                                        <div class="form-group">
                                            <label class="control-label col-md-3">账单日期</label>
                                            <div class="col-md-9">
                                                <div class="input-group input-large date-picker input-daterange">
                                                    @Html.TextBox("BeginDate", ViewBag.BeginDate as string, "{0:yyyy-MM-dd}", new { @class = "form-control" })
                                                    <span class="input-group-addon">
                                                        --
                                                    </span>
                                                    @Html.TextBox("EndDate", ViewBag.EndDate as string, "{0:yyyy-MM-dd}", new { @class = "form-control" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                            </div>
                        }
                        <!-- END FORM-->
                    </div>
                    <div class="portlet-body">
                        <div class="table-scrollable table-scrollable-borderless">
                            <table class="table table-hover table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.VesselName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ShipownerName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Sailor)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Material)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Spareparts)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Maintenance)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.LubricatingOil)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DailyExpenses)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Communication)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Insurance)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Certificate)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Others)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Total)
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.ActionLink(item.VesselName, "Details", "Vessel", new { id = item.VesselID }, null)
                                            </td>
                                            <td>
                                                @Html.ActionLink(item.ShipownerName, "Details", "Shipowner", new { id = item.ShipownerID }, null)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Sailor)<br />
                                                @Html.DisplayFor(modelItem => item.USSailor)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Material) <br />
                                                @Html.DisplayFor(modelItem => item.USMaterial)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Spareparts) <br />
                                                @Html.DisplayFor(modelItem => item.USSpareparts)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Maintenance) <br />
                                                @Html.DisplayFor(modelItem => item.USMaintenance)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LubricatingOil) <br />
                                                @Html.DisplayFor(modelItem => item.USLubricatingOil)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DailyExpenses) <br />
                                                @Html.DisplayFor(modelItem => item.USDailyExpenses)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Communication) <br />
                                                @Html.DisplayFor(modelItem => item.USCommunication)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Insurance) <br />
                                                @Html.DisplayFor(modelItem => item.USInsurance)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Certificate) <br />
                                                @Html.DisplayFor(modelItem => item.USCertificate)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Others) <br />
                                                @Html.DisplayFor(modelItem => item.USOthers)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Total) <br />
                                                @Html.DisplayFor(modelItem => item.USTotal)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- END SAMPLE TABLE PORTLET-->
            </div>
        </div>
    </div>
</div>
<!-- END PAGE CONTENT -->